<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (NIGHT MODE). -->
    <style name="Theme.InfoVotoUNS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color (rojo UNS). -->
        <item name="colorPrimary">@color/uns_red</item>
        <item name="colorPrimaryVariant">@color/uns_red_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color (rojo claro o mismo rojo institucional). -->
        <item name="colorSecondary">@color/uns_red_light</item>
        <item name="colorSecondaryVariant">@color/uns_red</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/uns_red_dark</item>
        <!-- Personaliza aquí si usas más atributos -->
    </style>
</resources>
