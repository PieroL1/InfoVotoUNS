<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="16dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Logo -->
        <ImageView
            android:id="@+id/ivLogoPartido"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="Logo Partido"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circle_background" />

        <!-- Detalles -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombrePartido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Partido"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#212121" />

            <TextView
                android:id="@+id/tvIdeologiaPartido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ideologia del partido del partido polÃ­tico."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>