<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_200"
    tools:context=".ui.fragments.PartidosDetailFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:padding="20dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/ivPartyLogo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_launcher_foreground"
                android:contentDescription="Logo del partido"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                android:layout_marginBottom="16dp" />
            <TextView
                android:id="@+id/tvPartyNameDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Partido Esperanza"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />
            <TextView
                android:id="@+id/tvPartyShortDescDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Un partido con enfoque en los derechos sociales y desarrollo sostenible."
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="24dp"
                android:textAlignment="center" />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvPartyHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Historia"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvPartyHistoryDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fundado en 1980, ha promovido políticas de inclusión y equidad social."
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvPartyGoals"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Principales objetivos"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvPartyGoalsDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Promover educación de calidad, salud universal y justicia ambiental."
                        android:textSize="14sp"
                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>


</FrameLayout>