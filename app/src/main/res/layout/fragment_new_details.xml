<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".View.ui.fragments.NoticiaDetailFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Toolbar con botón de cerrar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarNoticiaDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient"
            android:title="Detalle de Noticia"
            android:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_close" />

        <!-- Contenido -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Imagen destacada -->
                <ImageView
                    android:id="@+id/imgNoticia"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="Imagen de la noticia"
                    android:background="@color/black" />

                <!-- Título -->
                <TextView
                    android:id="@+id/tvNoticiaTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Título de la noticia"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/uns_red"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Info básica -->
                <TextView
                    android:id="@+id/tvNoticiaFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha: 01/08/2025"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvNoticiaAutor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Autor: Nombre"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvNoticiaCategoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Categoría: Actualidad"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="12dp" />

                <!-- Separador -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorOutline"
                    android:layout_marginBottom="12dp" />

                <!-- Contenido -->
                <TextView
                    android:id="@+id/tvNoticiaContenido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aquí va el contenido completo de la noticia..."
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
