<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ui.fragments.HomeFragment"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="32dp">

            <!-- Título Principal -->
            <TextView
                android:id="@+id/tvWelcomeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido a InfoVotoUNS"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp" />

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explora y mantente informado sobre elecciones universitarias."
                android:textSize="16sp"
                android:textColor="#424242"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:paddingHorizontal="16dp" />

            <!-- Eventos Section -->
            <TextView
                android:id="@+id/tvEventos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🗳️ Eventos Electorales"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:paddingBottom="4dp"
                android:textSize="18sp"
                android:textColor="#2E7D32"
                android:layout_marginBottom="4dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="4dp"
                android:elevation="4dp"
                app:cardCornerRadius="12dp">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fragmentEventos"
                    android:name="com.aristidevs.infovotouns.View.ui.fragments.EventosFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout="@layout/fragment_eventos" />
            </androidx.cardview.widget.CardView>

            <!-- Noticias Section -->
            <TextView
                android:id="@+id/tvNoticias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📰 Noticias Electorales"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:paddingBottom="4dp"
                android:textSize="18sp"
                android:textColor="#2E7D32"
                android:layout_marginBottom="4dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                app:cardCornerRadius="12dp">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fragmentNoticias"
                    android:name="com.aristidevs.infovotouns.View.ui.fragments.NoticiasFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout="@layout/fragment_noticias" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
