<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.HomeFragment"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    android:background="@android:color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Título Principal -->
            <TextView
                android:id="@+id/tvWelcomeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido a InfoVotoUNS"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp" />

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explora y mantente informado sobre elecciones universitarias."
                android:textSize="16sp"
                android:textColor="#424242"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Card Bonita -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🗳️ Próximas elecciones"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#2E7D32"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Revisa las fechas, requisitos y novedades para las elecciones del próximo semestre en la UNS."
                        android:textSize="15sp"
                        android:textColor="#424242"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvEbication"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🗳️ Próximas elecciones"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#2E7D32"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Revisa las fechas, requisitos y novedades para las elecciones del próximo semestre en la UNS."
                        android:textSize="15sp"
                        android:textColor="#424242"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvSettings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🗳️ Próximas elecciones"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#2E7D32"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Revisa las fechas, requisitos y novedades para las elecciones del próximo semestre en la UNS."
                        android:textSize="15sp"
                        android:textColor="#424242"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🗳️ Próximas elecciones"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#2E7D32"
                        android:layout_marginBottom="8dp"/>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Revisa las fechas, requisitos y novedades para las elecciones del próximo semestre en la UNS."
                        android:textSize="15sp"
                        android:textColor="#424242"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvFedora"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🗳️ Próximas elecciones"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#2E7D32"
                        android:layout_marginBottom="8dp"/>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Revisa las fechas, requisitos y novedades para las elecciones del próximo semestre en la UNS."
                        android:textSize="15sp"
                        android:textColor="#424242"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/lINUX"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🗳️ Próximas elecciones"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#2E7D32"
                        android:layout_marginBottom="8dp"/>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Revisa las fechas, requisitos y novedades para las elecciones del próximo semestre en la UNS."
                        android:textSize="15sp"
                        android:textColor="#424242"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Footer -->
            <TextView
                android:id="@+id/tvFooter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desarrollado por Daniel Domínguez"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                android:layout_marginTop="32dp"/>

        </LinearLayout>

    </ScrollView>



</FrameLayout>